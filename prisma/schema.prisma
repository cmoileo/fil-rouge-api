generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// schema.prisma

model Agency {
  id              Int            @id @default(autoincrement())
  name            String
  email           String
  password        String
  house_number    Int
  street          String
  zip_code        Int
  city            String
  country         String
  employe_number  Int
  plan            Plan
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  deletedAt       DateTime?
  roles_users     RolesUsers[]
  users           User[]
  folders         Folder[]
  tasks           Task[]
  roles           Role[]
  task_categories TaskCategory[]
  comments        Comment[]
  pictures        Picture[]
}

model User {
  id              Int               @id @default(autoincrement())
  email           String
  password        String
  agency_id       Int
  agency          Agency            @relation(fields: [agency_id], references: [id])
  roles_users     RolesUsers[]
  created_tasks   Task[]
  task_users      TaskUser[]
  Comment         Comment[]
  Picture         Picture[]
  FavoriteProject FavoriteProject[]
}

model TaskUser {
  id         Int       @id @default(autoincrement())
  task_id    Int
  employe_id Int
  task       Task      @relation(fields: [task_id], references: [id])
  employe    User      @relation(fields: [employe_id], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
}

model Folder {
  id        Int       @id @default(autoincrement())
  name      String
  agency_id Int
  folder_id Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  agency    Agency    @relation(fields: [agency_id], references: [id])
  parent    Folder?   @relation("FolderToFolder", fields: [folder_id], references: [id])
  folders   Folder[]  @relation("FolderToFolder")
  projects  Project[]
}

model Project {
  id              Int               @id @default(autoincrement())
  name            String
  description     String
  folder_id       Int
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  deletedAt       DateTime?
  folder          Folder            @relation(fields: [folder_id], references: [id])
  tasks           Task[]
  kanban_states   KanbanState[]
  FavoriteProject FavoriteProject[]
}

model Task {
  id                  Int            @id @default(autoincrement())
  name                String
  description         String
  assigned            Int
  progress_percentage Int
  finishing_date      DateTime
  starting_date       DateTime
  is_priority         Priority
  is_finished         Boolean
  project_id          Int
  kanban_state_id     Int
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
  deletedAt           DateTime?
  project             Project        @relation(fields: [project_id], references: [id])
  kanban_state        KanbanState    @relation(fields: [kanban_state_id], references: [id])
  task_users          TaskUser[]
  task_categories     TaskCategory[]
  comments            Comment[]
  pictures            Picture[]
  Agency              Agency?        @relation(fields: [agencyId], references: [id])
  agencyId            Int?
  User                User?          @relation(fields: [userId], references: [id])
  userId              Int?
}

model Role {
  id          Int          @id @default(autoincrement())
  name        String
  agency_id   Int
  roles_users RolesUsers[]
  agency      Agency       @relation(fields: [agency_id], references: [id])
}

model RolesUsers {
  id       Int     @id @default(autoincrement())
  user_id  Int
  role_id  Int
  user     User    @relation(fields: [user_id], references: [id])
  role     Role    @relation(fields: [role_id], references: [id])
  Agency   Agency? @relation(fields: [agencyId], references: [id])
  agencyId Int?
}

model TaskCategory {
  id        Int       @id @default(autoincrement())
  name      String
  color     String
  agency_id Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  agency    Agency    @relation(fields: [agency_id], references: [id])
  tasks     Task[]
}

model Comment {
  id        Int       @id @default(autoincrement())
  author_id Int
  task_id   Int
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  author    User      @relation(fields: [author_id], references: [id])
  task      Task      @relation(fields: [task_id], references: [id])
  Agency    Agency?   @relation(fields: [agencyId], references: [id])
  agencyId  Int?
  Picture   Picture[]
}

model Picture {
  id         Int       @id @default(autoincrement())
  pathname   String
  user_id    Int
  comment_id Int
  task_id    Int
  agency_id  Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
  user       User      @relation(fields: [user_id], references: [id])
  comment    Comment   @relation(fields: [comment_id], references: [id])
  task       Task      @relation(fields: [task_id], references: [id])
  agency     Agency    @relation(fields: [agency_id], references: [id])
}

model FavoriteProject {
  id         Int     @id @default(autoincrement())
  user_id    Int
  project_id Int
  order      Int
  user       User    @relation(fields: [user_id], references: [id])
  project    Project @relation(fields: [project_id], references: [id])
}

model KanbanState {
  id            Int                @id @default(autoincrement())
  state         String
  order         Int
  project_id    Int
  initial_state InitialKanbanState
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  deletedAt     DateTime?
  project       Project            @relation(fields: [project_id], references: [id])
  Task          Task[]
}

enum Plan {
  freemium
  pro
  business
}

enum Priority {
  low
  medium
  hard
}

enum InitialKanbanState {
  to_do
  in_progress
  needs_review
  done
}
